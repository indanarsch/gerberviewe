{
  "name": "tracespace",
  "private": true,
  "scripts": {
    "all": "pnpm clean && pnpm build:types && concurrently -g pnpm:format:check pnpm:lint pnpm:build:packages pnpm:test:once",
    "check": "pnpm clean && pnpm build:types && concurrently -g pnpm:format:check pnpm:lint pnpm:build:packages",
    "test": "vitest",
    "test:once": "vitest run --coverage",
    "lint": "xo",
    "format": "prettier --write \"**/*.@(js|ts|tsx|json|md|yml|yaml)\"",
    "format:check": "prettier --check \"**/*.@(js|ts|tsx|json|md|yml|yaml)\"",
    "build": "concurrently -g pnpm:build:*",
    "build:packages": "pnpm -r build",
    "build:types": "tsc --build",
    "clean": "tsc --build --clean",
    "dev": "pnpm -C www dev"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "dependencies": {
    "@tracespace/cli": "workspace:*",
    "@tracespace/fixtures": "workspace:*",
    "@tracespace/parser": "workspace:*",
    "@tracespace/plotter": "workspace:*",
    "@tracespace/www": "workspace:*",
    "@tracespace/xml-id": "workspace:*",
    "whats-that-gerber": "workspace:*"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/plugin-transform-react-jsx": "^7.18.6",
    "@babel/plugin-transform-react-jsx-development": "^7.18.6",
    "@preact/preset-vite": "^2.3.0",
    "@testing-library/dom": "^8.16.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/preact": "^3.2.2",
    "@testing-library/user-event": "^14.3.0",
    "@types/node": "^18.7.14",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@vitest/coverage-c8": "^0.22.1",
    "babel-plugin-transform-hook-names": "^1.0.2",
    "concurrently": "^7.3.0",
    "jsdom": "^20.0.0",
    "preact": "^10.10.0",
    "prettier": "^2.7.1",
    "testdouble": "^3.16.6",
    "typescript": "^4.8.2",
    "vite": "^3.0.9",
    "vitest": "^0.22.1",
    "xo": "^0.52.2"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "webpack",
        "rollup"
      ]
    }
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": false,
    "arrowParens": "avoid"
  },
  "xo": {
    "prettier": true,
    "parserOptions": {
      "project": "./tsconfig.lint.json"
    },
    "settings": {
      "react": {
        "pragma": "h"
      }
    },
    "rules": {
      "@typescript-eslint/naming-convention": "off",
      "import/extensions": "off",
      "unicorn/no-array-callback-reference": "off",
      "unicorn/no-array-reduce": "off",
      "n/file-extension-in-import": "off",
      "default-case": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.(ts|tsx)"
        ],
        "rules": {
          "@typescript-eslint/ban-types": [
            "error",
            {
              "extendDefaults": true,
              "types": {}
            }
          ],
          "@typescript-eslint/consistent-type-definitions": [
            "error",
            "interface"
          ]
        }
      },
      {
        "files": [
          "**/*.d.ts"
        ],
        "rules": {
          "@typescript-eslint/triple-slash-reference": "off",
          "@typescript-eslint/no-unnecessary-type-arguments": "off",
          "@typescript-eslint/prefer-function-type": "off",
          "import/no-unassigned-import": "off"
        }
      },
      {
        "files": [
          "**/__tests__/**",
          "**/*.config.ts"
        ],
        "rules": {
          "@typescript-eslint/consistent-type-assertions": "off",
          "@typescript-eslint/no-namespace": "off",
          "import/no-extraneous-dependencies": "off",
          "max-nested-callbacks": "off",
          "unicorn/no-array-for-each": "off",
          "unicorn/prefer-module": "off"
        }
      }
    ]
  }
}
