{
  "name": "tracespace",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "_test": "mocha --timeout=5000 'packages/**/*test.js'",
    "test": "cross-env INTEGRATION=1 nyc yarn run _test",
    "posttest": "yarn run example && yarn run lint",
    "test:watch": "yarn run _test --watch --reporter=dot",
    "test:browser": "karma start",
    "coverage": "nyc report --reporter=lcov",
    "integration:server": "lerna run integration:server --parallel",
    "lint": "eslint '**/*.js'",
    "format": "prettier-eslint --write '**/*.js'",
    "docs": "lerna run docs",
    "example": "lerna run example",
    "prebump": "yarn run test",
    "bump": "lerna publish",
    "publish": "lerna exec -- 'node $LERNA_ROOT_PATH/scripts/publish.js'",
    "ci": "yarn run test",
    "preci:coverage": "yarn run coverage",
    "ci:coverage": "codecov"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "plugins": [
      "standard"
    ],
    "rules": {
      "array-bracket-spacing": [
        "error",
        "never"
      ],
      "object-curly-spacing": [
        "error",
        "never"
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*test.js"
        ],
        "env": {
          "mocha": true
        }
      }
    ]
  },
  "nyc": {
    "all": true,
    "include": [
      "packages/**"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/example/**",
      "**/integration/**",
      "**/test.js",
      "**/test/**",
      "packages/fixtures/**"
    ]
  },
  "devDependencies": {
    "browserify": "^16.2.2",
    "chai": "^4.1.2",
    "codecov": "^3.0.2",
    "concat-stream": "^1.6.2",
    "cross-env": "^5.1.4",
    "cz-conventional-changelog": "^2.1.0",
    "debug": "^3.1.0",
    "eslint": "^5.0.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "execa": "^0.10.0",
    "express": "^4.16.2",
    "karma": "^2.0.0",
    "karma-browserify": "^5.1.3",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "lerna": "^3.0.0-beta.21",
    "lodash": "^4.17.10",
    "mocha": "^5.0.0",
    "nyc": "^12.0.2",
    "prettier-eslint-cli": "^4.7.0",
    "proxyquire": "^2.0.1",
    "proxyquire-universal": "^1.0.8",
    "proxyquireify": "^3.2.1",
    "pump": "^3.0.0",
    "read-pkg": "^4.0.1",
    "run-parallel": "^1.1.6",
    "run-waterfall": "^1.1.3",
    "shortid": "^2.2.8",
    "sinon": "^6.0.1",
    "sinon-chai": "^3.2.0",
    "snap-shot-it": "^5.0.1",
    "testdouble": "^3.3.1",
    "to-readable-stream": "^1.0.0",
    "watchify": "^3.10.0",
    "xml-formatter": "^1.0.1"
  }
}
