{
  "name": "tracespace",
  "private": true,
  "scripts": {
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "xo",
    "format": "prettier --write \"**/*.@(js|ts|tsx|json|md|yml|yaml)\"",
    "build": "concurrently pnpm:build:*",
    "build:bundles": "pnpm -r build",
    "build:types": "tsc --build"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "dependencies": {
    "@tracespace/fixtures": "workspace:*",
    "@tracespace/parser": "workspace:*",
    "whats-that-gerber": "workspace:*",
    "@tracespace/xml-id": "workspace:*",
    "@tracespace/cli": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^17.0.25",
    "c8": "^7.11.2",
    "concurrently": "^7.1.0",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3",
    "vite": "^2.9.5",
    "vitest": "^0.9.4",
    "xo": "^0.48.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": ["webpack"]
    }
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": false,
    "arrowParens": "avoid"
  },
  "xo": {
    "prettier": true,
    "parserOptions": {
      "project": "./config/tsconfig-lint.json"
    },
    "rules": {
      "@typescript-eslint/array-type": "off",
      "@typescript-eslint/ban-types": ["error", {"extendDefaults": true,"types": {}}],
      "@typescript-eslint/consistent-indexed-object-style": "off",
      "@typescript-eslint/naming-convention": "off",
      "@typescript-eslint/non-nullable-type-assertion-style": "off",
      "@typescript-eslint/padding-line-between-statements": "off",
      "@typescript-eslint/prefer-includes": "off",
      "@typescript-eslint/prefer-reduce-type-parameter": "off",
      "@typescript-eslint/prefer-regexp-exec": "off",
      "import/no-extraneous-dependencies": "off",
      "unicorn/better-regex": "off",
      "unicorn/explicit-length-check": "off",
      "unicorn/no-array-for-each": "off",
      "unicorn/no-array-reduce": "off",
      "unicorn/no-array-callback-reference": "off",
      "unicorn/prefer-includes": "off",
      "unicorn/prefer-number-properties": "off",
      "unicorn/prefer-object-from-entries": "off",
      "unicorn/prefer-switch": "off",
      "unicorn/prevent-abbreviations": "off",
      "capitalized-comments": "off",
      "eqeqeq": ["error", "always", {"null": "ignore"}],
      "no-eq-null": "off",
      "no-negated-condition": "off",
      "no-return-assign": "off",
      "object-shorthand": "off"
    }
  }
}
